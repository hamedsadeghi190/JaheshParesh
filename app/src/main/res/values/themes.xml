<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Jahesh" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/black_overlay</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primeryColor</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MentTextBold" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Jahesh.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Jahesh.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Jahesh.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Jahesh.Fullscreen" parent="Theme.Jahesh">
        <item name="android:actionBarStyle">@style/Widget.Theme.Jahesh.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Jahesh.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/red</item>
        <item name="fullscreenTextColor">@color/red</item>
    </style>


    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/Yellow</item>
        <item name="android:fontFamily">@font/yekanbakh_regular</item>
    </style>

    <style name="BottomNavigation.InActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <!--        <item name="android:textStyle">bold</item>-->
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">@font/iransans_dn_fa_light</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="android:strokeColor">@color/bordercolor</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.rounded.five" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="android:strokeColor">@color/bordercolor</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="MyDefaultTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/bordercolor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/yekanbakh_regular</item>
    </style>
</resources>